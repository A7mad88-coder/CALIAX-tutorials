			"event": [
				{
					"listen": "prerequest",
					"script": {
						"type": "text/javascript",
						"exec": [
							"var moment = require('moment');",
							"const dateNow = moment.utc().unix();",
							"const customerKey = pm.collectionVariables.get('customer_key');",
							"const deviceKey = pm.collectionVariables.get('device_key');",
							"pm.collectionVariables.set(\"timestamp\", dateNow);",
							"const mix = Math.floor(dateNow) + deviceKey;",
							"let hash = CryptoJS.HmacSHA256(mix, customerKey).toString(CryptoJS.digest);",
							"pm.collectionVariables.set('device_signature', hash);",
							"",
							"pm.sendRequest({",
							"    url: pm.collectionVariables.get(\"asvin-oauth-server\"),",
							"    method: 'POST',",
							"    header: 'Content-Type:application/json',",
							"    body: {",
							"        mode: 'raw',",
							"        raw: JSON.stringify({ ",
							"            customer_key: pm.collectionVariables.get(\"customer_key\"), ",
							"            device_signature: pm.collectionVariables.get(\"device_signature\"),",
							"            timestamp: pm.collectionVariables.get(\"timestamp\")",
							"            })",
							"    }",
							"}, function (err, res) {",
							"    // console.log(res.code)",
							"    if(!err && res.code == 200) {",
							"        // console.log(res.json().token);",
							"        pm.collectionVariables.set(\"X-Access-Token\", res.json().token);",
							"    }",
							"});"
						]
					}
				},
